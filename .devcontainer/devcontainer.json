{
	"name": "iida-devkit",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"remoteUser": "user",
	"runArgs": [
		"--privileged",
		"--rm"
	],
	"mounts": [
		"source=/dev/bus/usb/,target=/dev/bus/usb,type=bind,consistency=cached",
		"source=/home/${localEnv:USER}/.ssh,target=/home/user/.ssh,type=bind,readonly"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"cortex-debug.armToolchainPath": "/opt/arm-gnu-toolchain/bin",
				"cortex-debug.JLinkGDBServerPath": "/opt/jlink/JLinkGDBServer",
				"C_Cpp.default.compilerPath": "/opt/arm-gnu-toolchain/bin/arm-none-eabi-g++",
				"editor.formatOnSave": true
			},
			"extensions": [
				"ms-vscode.cpptools",
				"marus25.cortex-debug"
			]
		}
	}
}