#pragma once

#include <cstdint>

// clang-format off
#define APP_HEADER_SIZE @APP_HEADER_SIZE@
// clang-format on

/**
 * @brief Header for the application image.
 */
struct __attribute__((aligned(4))) AppHeader {
	uint32_t id;
	uint32_t size;
	uint32_t crc;
	// clang-format off
	uint32_t reserved[(APP_HEADER_SIZE / 4UL) - 3UL];
	// clang-format on
};
