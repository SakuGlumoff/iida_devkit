{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Generate",
			"group": {
				"kind": "build"
			},
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake -G Ninja -S . -B build -DCMAKE_TOOLCHAIN_FILE=cmake/arm-none-eabi.cmake -DCMAKE_BUILD_TYPE=Debug"
			]
		},
		{
			"label": "Build: Bootloader",
			"group": {
				"kind": "build"
			},
			"dependsOn": [
				"CMake: Generate"
			],
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake --build build --target bootloader"
			]
		},
		{
			"label": "Build: Application",
			"group": {
				"kind": "build"
			},
			"dependsOn": [
				"CMake: Generate"
			],
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake --build build --target application"
			]
		},
		{
			"label": "Build: PTSW",
			"group": {
				"kind": "build"
			},
			"dependsOn": [
				"CMake: Generate"
			],
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake --build build --target ptsw"
			]
		},
		{
			"label": "Build: All",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"CMake: Generate"
			],
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake --build build"
			]
		}
	]
}