{
	"version": "2.0.0",
	"inputs": [
		{
			"id": "qemu",
			"type": "pickString",
			"description": "Build for QEMU.",
			"default": "OFF",
			"options": [
				"OFF",
				"ON"
			]
		}
	],
	"tasks": [
		{
			"label": "CMake: Generate",
			"group": {
				"kind": "build"
			},
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake -G Ninja -S . -B build -DCMAKE_TOOLCHAIN_FILE=cmake/arm-none-eabi.cmake -DCMAKE_BUILD_TYPE=Debug -DQEMU=${input:qemu}"
			]
		},
		{
			"label": "Build: Bootloader",
			"group": {
				"kind": "build"
			},
			"dependsOn": [
				"CMake: Generate"
			],
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake --build build --target bootloader"
			]
		},
		{
			"label": "Build: Application",
			"group": {
				"kind": "build"
			},
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake --build build --target application"
			]
		},
		{
			"label": "Build: All",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc",
			"type": "shell",
			"command": [
				"cd firmware",
				"&& cmake --build build"
			]
		}
	]
}